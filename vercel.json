{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**/*"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "SAP-Customer.html",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ]
}
