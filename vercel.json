// vercel.json - updated configuration
{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { 
        "maxLambdaSize": "50mb",
        "includeFiles": ["uploads/**"]
      }
    },
    {
      "src": "SAP-Customer.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "SAP-Customer.html",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ]
}
